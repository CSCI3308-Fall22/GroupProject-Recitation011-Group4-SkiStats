<main>
  <link
    href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
    rel="stylesheet"
  />

  <script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>

  <h1 class="font text-3xl mb-2" style="margin-left: 10px">Top resorts</h1>
  <h4
    class="font-thin text-sm mb-2"
    style="
      font-family: 'Raleway', sans-serif;
      color: black;
      margin-bottom: 0px;
      margin-left: 20px;
    "
  >
    Over 87,000,000 guest reviews with an average of 4.8 out of 5 stars
  </h4>
  <div class="input" id="cord" href="/getHotel" action="/getHotel"></div>

  <section class="text-gray-600 body-font">
    <div class="container px-0 py-0 mx-auto">
      <form method="POST" action="/updHotels">
        <input
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          type="text"
          id="city"
          name="city"
          style="
            font-family: 'Raleway', sans-serif;
            margin-bottom: 20px;
            margin-top: 0px;
            font-size: 20px;
          "
          placeholder="Where to?"
        />
      </form>

      <% if (locals.message) { %>
      <div role="alert" style="margin-bottom: 40px">
        <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
          oops!
        </div>
        <div
          class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700"
        >
          <p>No hotel information found for this city</p>
        </div>

        <% } %>

        <div class="flex flex-wrap -m-4">
          <% if(locals.data != undefined){ data.forEach(x=>{ %>

          <div class="p-2 md:w-1/3">
            <div
              class="h-full rounded-xl shadow-cla-blue bg-gradient-to-r from-indigo-50 to-blue-50 overflow-hidden"
            >
              <img
                class="lg:h-48 md:h-36 w-full object-cover object-center scale-110 transition-all duration-400 hover:scale-100"
                src="https://wallpaperaccess.com/full/896261.jpg"
                alt="blog"
              />
              <div class="p-1">
                <h2
                  class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"
                  style="margin-top: 20px"
                ></h2>
                <h2
                  class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"
                  style="margin-top: 20px"
                ></h2>
                <h2
                  class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"
                  style="margin-top: 10px"
                >
                  Hotel
                </h2>
                <h1
                  class="title-font text-medium font-thin mb-3"
                  style="
                    font-family: 'Raleway', sans-serif;
                    color: black;
                    margin-bottom: 0;
                  "
                >
                  <%- x.name%>
                </h1>
                <p
                  class="leading-relaxed flex-wrap text-xs font-arial mb-3"
                  style="font-size: 15px"
                >
                  <%-JSON.stringify(x.distance.value)%> <%-x.distance.unit%>
                  away
                </p>

                <p
                  class="leading-relaxed flex-wrap text-xs mb-3"
                  style="margin-top: 3px; margin-bottom: 0"
                >
                  lat: <%-JSON.stringify(x.geoCode.latitude)%>
                </p>
                <p class="leading-relaxed flex-wrap text-xs mb-3">
                  long: <%-JSON.stringify(x.geoCode.longitude)%>
                </p>

                <div class="flex items-center flex-wrap">
                  <button
                    name="btn"
                    id="btn"
                    style="margin-top: 0px; margin-bottom: 10px"
                  >
                    &#9825;
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% }) }%>
        </div>
      </div>
    </div>
  </section>

  <hr />
</main>
