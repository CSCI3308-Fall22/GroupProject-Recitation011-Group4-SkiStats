<main>





  <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet" />



  <script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>
  </div>


  <h1 class="font text-3xl mb-2">Top resorts</h1>
  <h4 class="font-thin text-sm mb-2" style="font-family: 'Raleway', sans-serif;color:black;margin-bottom: 0;">Over 87,000,000 guest
    reviews with an average of 4.8 out of 5 stars</h4>
  <div class="input" id="cord" href="/getHotel" action="/getHotel"> </div>




  <section class="text-gray-600 body-font">
    <div class="container px-1 py-0 mx-auto">
      <div class="flex flex-wrap -m-4">
        <% data.forEach(x=>{ %>

          <div class="p-2 md:w-1/3 ">
            <div class="h-full rounded-xl shadow-cla-blue bg-gradient-to-r from-indigo-50 to-blue-50 overflow-hidden">
              <img
                class="lg:h-48 md:h-36 w-full object-cover object-center scale-110 transition-all duration-400 hover:scale-100"
                src="https://wallpaperaccess.com/full/896261.jpg" alt="blog">
              <div class="p-1">
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1" style="margin-top: 20px;">
                </h2>
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1" style="margin-top: 20px;">
                </h2>
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1" style="margin-top: 10px;">
                  Hotel</h2>
                <h1 class="title-font text-medium font-thin mb-3"
                  style="font-family: 'Raleway', sans-serif;color:black;margin-bottom: 0;">
                  <%- x.name%>
                </h1>
                <p class="leading-relaxed flex-wrap text-xs font-arial mb-3" style="font-size: 15px;">
                  <%-JSON.stringify(x.distance.value)%>
                    <%-x.distance.unit%> away
                </p>
                
                <p class="leading-relaxed flex-wrap text-xs  mb-3"
                  style="margin-top: 3px; margin-bottom: 0;">lat: <%-JSON.stringify(x.geoCode.latitude)%>
                </p>
                <p class="leading-relaxed flex-wrap text-xs  mb-3">long: <%-JSON.stringify(x.geoCode.longitude)%>
                </p>


                
                <div class="flex items-center flex-wrap ">
                  <button
                   name ='btn' id='btn'  style="margin-top: 0px;margin-bottom: 10px">&#9825;</button>
                   
                </div>
              </div>
            </div>
          </div>
          <% })%>
      </div>
    </div>
    
  
      
    </div>
  </section>




  <hr>
</main>