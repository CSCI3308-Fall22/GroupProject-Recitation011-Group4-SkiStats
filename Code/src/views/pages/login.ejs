<main>
    <div class="container">
        <div class="col"><%- include ('../partials/message') %></div>
        <h1 class="text-3xl">Welcome Back to SkiStats</h1>
        <form method="POST" action="/login">
            <div class="form-group">
                <label for="username" class="block mb-2 text-sm font-medium">Username</label>
                <input type="username" class="input input-bordered w-full form-control" id="text" aria-describedby="emailHelp" placeholder="Enter Username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password" class="block mb-2 text-sm font-medium">Password</label>
                <input type="text" class="input input-bordered w-full form-control" id="password" placeholder="Enter Password" name="password" required>
            </div>
            <div class="divider"></div>
            <p class="same-line">
                Don't have an account? <a href="/register" class="link link-info">Register</a>
            </p>
            <button class="btn btn-outline rounded-xl same-line" id="submit-btn" type="submit">Login</button>
        </form>
    </div>
</main>

<style>
    main {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        margin-left: auto;
        margin-right: auto;
        /*margin: auto;*/
        max-width: 90vw;
    }

    @media only screen and (min-width: 768px) {
        .container {
            max-width: 50vw;
        }
    }

    h1 {
        text-align: center;
    }

    .same-line {
        display: inline-block;
        vertical-align: middle;
    }

    #submit-btn {
        float: right;
    }
</style>

